# Environment Configuration Template
# RBT Bank Risk Management System
# Copy this file to .env.development or .env.production and update the values

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api
VITE_APP_URL=http://localhost:5173

# Application Information
VITE_APP_NAME=RBT Bank Risk Management
VITE_COMPANY_NAME=RBT Bank Inc.
VITE_COMPANY_LOCATION=Talisayan, Misamis Oriental, Philippines

# Environment (development, production)
VITE_NODE_ENV=development
VITE_DEBUG=true

# Session Configuration (in minutes)
VITE_SESSION_TIMEOUT=30
VITE_TOKEN_REFRESH_INTERVAL=25

# Features
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_LOGGING=true

# Export Configuration
VITE_MAX_EXPORT_RECORDS=1000

# Security
VITE_SECURE_COOKIES=false
VITE_CORS_ENABLED=true

# Development specific (optional)
VITE_HOT_RELOAD=true
VITE_MOCK_API=false

# Notes:
# - All environment variables must start with VITE_ to be accessible in the frontend
# - Boolean values should be strings: 'true' or 'false'
# - Numbers will be parsed as integers where needed
# - For production, set VITE_API_BASE_URL to your production domain
# - Set VITE_DEBUG=false and VITE_ENABLE_DEV_TOOLS=false in production
# - Increase VITE_SESSION_TIMEOUT in development for convenience